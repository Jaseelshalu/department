<style>
  @import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Anek+Malayalam:wght@100..800&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap');

  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Tajawal', sans-serif;
  }

  body {
      background: linear-gradient(135deg, #80765a 0%, #5a5340 100%);
      color: #fff;
      font-size: 16px;
      min-height: 100vh;
  }

  .header {
      text-align: center;
      padding: 40px 20px 20px;
      background: rgba(0,0,0,0.1);
      backdrop-filter: blur(5px);
      border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  .header img {
      width: 150px;
      height: auto;
      {{!-- border-radius: 50%; --}}
      {{!-- box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3); --}}
      {{!-- border: 3px solid #d4cab3; --}}
      {{!-- transition: transform 0.5s ease; --}}
  }

  .header img:hover {
      transform: rotate(5deg) scale(1.05);
  }

  .card-section {
      padding: 60px 20px;
      text-align: center;
  }

  .container {
      max-width: 1400px;
      margin: auto;
      width: 95%;
  }

  h1 {
      font-size: 3rem;
      margin-bottom: 30px;
      color: #f5f0e5;
      font-weight: 700;
      font-family: 'Playfair Display', serif;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
      position: relative;
      display: inline-block;
  }

  h1::after {
      content: '';
      position: absolute;
      bottom: -10px;
      left: 50%;
      transform: translateX(-50%);
      width: 100px;
      height: 3px;
      background: #d4cab3;
      border-radius: 3px;
  }

  .card-wrapper {
      display: flex;
      flex-wrap: wrap;
      gap: 30px;
      justify-content: center;
  }

  .card {
      background: rgba(255, 255, 255, 0.1);
      border-radius: 20px;
      overflow: hidden;
      width: 320px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.1);
  }

  .card:hover {
      transform: translateY(-15px) scale(1.03);
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.4);
      background: rgba(255, 255, 255, 0.15);
  }

  .img-section {
      position: relative;
      overflow: hidden;
      width: 100%;
      height: 220px;
  }

  .img-section img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.5s ease;
  }

  .card:hover .img-section img {
      transform: scale(1.1);
  }

  .img-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(to bottom, transparent 60%, rgba(0,0,0,0.7));
      z-index: 1;
  }

  .info-section {
      padding: 20px;
      text-align: center;
      position: relative;
  }

  .name {
      font-size: 24px;
      font-weight: bold;
      color: #f5f0e5;
      margin-bottom: 8px;
      font-family: 'Playfair Display', serif;
  }

  .place {
      font-size: 18px;
      color: #d4cab3;
      margin-bottom: 8px;
      font-weight: 500;
  }

  .inst {
      font-size: 16px;
      color: #aca38e;
      margin: 15px 0 5px;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-weight: 300;
  }

  .institution {
      font-size: 18px;
      color: #f5f0e5;
      font-weight: 500;
  }

  .st-number {
      display: inline-block;
      margin-top: 15px;
      padding: 5px 15px;
      background: rgba(172, 163, 142, 0.2);
      border-radius: 20px;
      color: #d4cab3;
      font-size: 14px;
      font-weight: 600;
  }

  /* Decorative elements */
  .card::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 5px;
      background: linear-gradient(90deg, #d4cab3, #aca38e);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
      h1 {
          font-size: 2.2rem;
      }
      
      .card {
          width: 280px;
      }
  }

  @media (max-width: 480px) {
      h1 {
          font-size: 1.8rem;
      }
      
      .header img {
          width: 140px;
      }
  }
</style>

<div class="header">
    <img src="/images/7.png" alt="Logo">
</div>

<div class="card-section">
    <div class="container">
        <h1>Selected Candidates</h1>

        <div class="card-wrapper" id="card-wrapper">
            {{#each candidates}}
            <div class="card">
                <div class="img-section">
                    <img src="/images/user-images/{{this._id}}.jpg" alt="{{this.Name}}" onerror="this.onerror=null;this.src='/images/user-images/default.jpg';">
                </div>
                <div class="info-section">
                    <p class="name">{{this.Name}}</p>
                    <p class="place">{{this.Place}}</p>
                    <p class="inst">Institution</p>
                    <p class="institution">{{this.Institution}}</p>
                    <span class="st-number">ST Code: {{this.Code}}</span>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>