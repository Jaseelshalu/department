<style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;1,400;1,500&display=swap');

    * {
        padding: 0;
        margin: 0;
        font-family: "Roboto", sans-serif;
    }

    body {
        width: 100%;
        background-color: #544b30;
        background-size: cover;
        position: relative;
        color: black;

    }

    .container {
        max-width: 1140px;
        margin: auto;
        width: 90%;
        padding-top: 30px;
        padding-bottom: 30px;

    }

    .header {
        background: inherit;
        text-align: center;

        img {
            max-width: 500px;
            width: 65%;
        }
    }

    h1 {
        text-align: center;
        margin-bottom: 10px;
    }

    .card-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        gap: 20px;

        .card {
            border-radius: 10px;
            box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px;
            /* width: 250px; */

            .img-section {
                border-radius: 10px;
                text-align: center;
                background: #000;
            }


            .info-section {

                text-align: center;
                padding: 10px;
                color: #000;
                color: #000;

                .name {
                    font-size: 18px;
                    text-align: center;
                    font-weight: bold;
                    text-transform: uppercase;
                }

                .place {
                    font-size: 18px;
                    text-align: center;
                }

                .inst {
                    text-align: center;
                    padding: 5px;
                    color: #544b30;
                    display: inline-block;
                    margin: 10px;
                    border-radius: 5px;
                    font-size: 18px;
                    background: #000;
                }

                .institution {
                    font-size: 18px;
                }


            }

        }
    }

    @media only screen and (max-width: 768px) {
        .header {

            /* img{
            width: 300px;
        } */
        }
    }

    @media only screen and (max-width: 768px) {
        .card-wrapper {
            grid-template-columns: 1fr 1fr;
        }
    }

    @media only screen and (max-width: 596px) {
        .card-wrapper {
            grid-template-columns: 1fr;
        }
    }
</style>
<div class="header">
    <img src="./path/to/your/image.png" alt="">
</div>
<br><br>
<div class="card-section">
    <div class="container">
        <h1>Selected Candidates</h1>

        <div class="card-wrapper" id="card-wrapper">
            {{#each candidates}}
            <!-- Example card -->
            <div class="card">
                <div class="img-section">
                    <img src="./path/to/your/image.png" alt="">
                </div>
                <div class="info-section">
                    <p class="name">{{this.Name}}</p>
                    <p class="place">{{this.Place}}</p>
                    <p class="inst">Institution</p>
                    <p class="institution">{{this.Institution}}</p>
                </div>
            </div>
            {{/each}}
            <!-- Repeat the above card structure for each candidate -->
        </div>
    </div>
</div>