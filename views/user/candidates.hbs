<style>
  @import url('https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Anek+Malayalam:wght@100..800&display=swap');

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Tajawal', sans-serif;
}

body {
    background: #80765a;
    color: #fff;
    font-size: 16px;
}

.header {
    text-align: center;
    padding: 20px;
}

.header img {
    width: 150px;
    height: auto;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
}

.card-section {
    padding: 40px 20px;
    text-align: center;
}

.container {
    max-width: 1200px;
    margin: auto;
    width: 90%;
}

h1 {
    font-size: 2.5rem;
    margin-bottom: 20px;
    color: #aca38e;
    font-weight: 700;
}

.card-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.card {
    background: #d4cab3;
    border-radius: 15px;
    overflow: hidden;
    width: 300px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s, box-shadow 0.3s;
}

.card:hover {
    transform: translateY(-10px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
}

.img-section {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 200px;
}

.img-section img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-bottom: 5px solid #aca38e;
}

.info-section {
    padding: 15px;
    text-align: left;
}

.name {
    font-size: 20px;
    font-weight: bold;
    color: #4f4b3c;
    margin-bottom: 5px;
}

.place {
    font-size: 18px;
    color: #4f4b3c;
    margin-bottom: 5px;
}

.inst {
    font-size: 16px;
    color: #4f4b3c;
    margin: 10px 0 5px;
}

.institution {
    font-size: 16px;
    color: #4f4b3c;
}
</style>
<div class="header">
    <img src="./path/to/your/image.png" alt="">
</div>
<br><br>
<div class="card-section">
    <div class="container">
        <h1>Selected Candidates</h1>

        <div class="card-wrapper" id="card-wrapper">
            {{#each candidates}}
            <!-- Example card -->
            <div class="card">
                <div class="img-section">
                    <img src="/images/user-images/{{this._id}}.jpg" alt="">
                </div>
                <div class="info-section">
                    <p class="name">{{this.Name}}</p>
                    <p class="place">{{this.Place}}</p>
                    <p class="inst">Institution</p>
                    <p class="institution">{{this.Institution}}</p><br>
                    <p class="institution">ST NO: {{this.STNO}}</p>
                </div>
            </div>
            {{/each}}
            <!-- Repeat the above card structure for each candidate -->
        </div>
    </div>
</div>