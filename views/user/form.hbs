        <script>

            function changeImage(imageId) {
                var image = document.getElementById(imageId);
                var imagePath = image.getAttribute('src');
                var uncheckedImage = "/images/lock.png";
                var checkedImage = "/images/unlock.png";

                if (imagePath === uncheckedImage) {
                    image.setAttribute('src', checkedImage);
                } else {
                    image.setAttribute('src', uncheckedImage);
                }
            }
            function validateForm() {
                var radioButtons = document.getElementsByName('Program');
                var isChecked = false;

                for (var i = 0; i < radioButtons.length; i++) {
                    if (radioButtons[i].checked) {
                        isChecked = true;
                        break;
                    }
                }

                if (!isChecked) {
                    alert('Please select an option before submitting.');
                    return false; // Prevent form submission
                }

                return true; // Allow form submission
            }

        </script>
