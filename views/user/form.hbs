           function handleRadioChange() {
    var radioButtons = document.getElementsByClassName('formRadio');
    var imageElements = document.getElementsByClassName('imageRadio');

    for (var i = 0; i < radioButtons.length; i++) {
      if (radioButtons[i].checked) {
        // Replace the image source with the desired image path
        imageElements[i].src = "/images/unlock.png";
      } else {
        // Set the image source back to the default image path
        imageElements[i].src = "/images/lock.png";
      }
    }
  }
  var radioButtons = document.getElementsByClassName('formRadio');
  for (var i = 0; i < radioButtons.length; i++) {
    radioButtons[i].addEventListener('change', handleRadioChange);
  }

            function validateForm() {
                var radioButtons = document.getElementsByName('Program');
                var isChecked = false;

                for (var i = 0; i < radioButtons.length; i++) {
                    if (radioButtons[i].checked) {
                        isChecked = true;
                        break;
                    }
                }

                if (!isChecked) {
                    alert('Please select an option before submitting.');
                    return false; // Prevent form submission
                }

                return true; // Allow form submission
            }

        </script>
