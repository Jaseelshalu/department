                    <a style="text-decoration: none;" href="{{tlink.tlink}}" target="_blank" class="btn2">telegram</a>
                    <a style="text-decoration: none;" href="/candidates" class="btn2">Candidates</a>
                    <a style="text-decoration: none;" href="/logout" class="btn1">Log Out</a>
                </div>

                {{#if loginErr}}
                <div class="alert alert-danger" id="hideMe">
                    {{loginErr}}
