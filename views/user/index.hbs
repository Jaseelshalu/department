    <div class="container">
        <div class="main-wrapper">
            <div class="img-section">
                <div class="img">
                    <img src="/images/user-images/{{userProfile._id}}.jpg" class="img1" alt="">
                    <p class="name">{{userProfile.Name}} <br> <span>{{userProfile.Code }}</span></p>

                </div>
                <div class="details">
                    <p class="info">Email: <span>{{userProfile.Email}}</span></p>
                    <p class="info">Phone: <span>{{userProfile.Phone}}</span></p>
                    <p class="info">Place: <span>{{userProfile.Place}}</span></p>
                    <p class="info">ST Code: <span>{{userProfile.Code}}</span></p>
                    <p class="info">Date of Birth: <span>{{userProfile.DOB}}</span></p>
                    <p class="info institution">Institution: <span>{{userProfile.Institution}}</span></p>
                </div>
            </div>
            <div class="info-section">
                <img src="/images/7.png" alt="">
                <div class="ravi">
